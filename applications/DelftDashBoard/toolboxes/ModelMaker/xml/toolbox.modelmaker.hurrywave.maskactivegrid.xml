<?xml version="1.0"?>
<root>

  <element>
    <style>listbox</style>
    <text>Include Polygons</text>
    <textposition>above-center</textposition>
    <variable>handles.toolbox.modelmaker.hurrywave.mask.activeincludepolygon</variable>
    <type>integer</type>
    <position>10 20 90 100</position>
    <tooltipstring>Select include polygon</tooltipstring>
    <onchange>ddb_ModelMakerToolbox_hurrywave_mask</onchange>
    <option1>selectincludepolygon</option1>
    <listtext>
      <variable>handles.toolbox.modelmaker.hurrywave.mask.includepolygonnames</variable>
    </listtext>
  </element>
  <element>
    <style>pushbutton</style>
