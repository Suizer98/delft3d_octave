%-------------------------------------------------------------------------------
%   http://www.deltaressystems.com
%   $HeadURL$
%   $Id$

persistent state
if isempty(state)
    state='on';
end
if nargin==0
    if isequal(state,'on')
        mversion=version;
        if mversion(1)-'0'>5
            beep
        else
            fprintf(char(7))
        end
    end
else
    switch lower(cmd)
        case {'on','off'}
            state=lower(cmd);
        otherwise
            error('Unknown command option')
    end
end

