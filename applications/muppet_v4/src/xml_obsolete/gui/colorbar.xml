<?xml version="1.0"?>
<root>
  <title>Color Bar</title>
  <width>180</width>
  <height>440</height>
  <tag>legend</tag>
  <element>
    <tag>selecttype</tag>
    <style>popupmenu</style>
    <position>20 390 140 20</position>
    <variable>type</variable>
    <type>integer</type>
    <text>Type</text>
    <textposition>above-left</textposition>
    <listtext>Color bar</listtext>
    <listtext>Boxes with border</listtext>
    <listtext>Boxes without border</listtext>
    <listvalue>1</listvalue>
    <listvalue>2</listvalue>
    <listvalue>3</listvalue>
  </element>
  <element>
    <tag>editpositionx</tag>
    <style>edit</style>
    <position>100 350 60 20</position>
    <variable>position(1)</variable>
    <type>real</type>
    <text>Position X (cm)</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>editpositionx</tag>
    <style>edit</style>
    <position>100 320 60 20</position>
    <variable>position(2)</variable>
    <type>real</type>
    <text>Position Y (cm)</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>editwidth</tag>
    <style>edit</style>
    <position>100 290 60 20</position>
    <variable>position(3)</variable>
    <type>real</type>
    <text>Width (cm)</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>editheight</tag>
    <style>edit</style>
    <position>100 260 60 20</position>
    <variable>position(4)</variable>
    <type>real</type>
    <text>Height (cm)</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>selectfont</tag>
    <style>selectfont</style>
    <position>100 210 60 20</position>
    <text>Font</text>
    <variable>font</variable>
    <tooltipstring>Select legend font</tooltipstring>
  </element>
  <element>
    <tag>selectdecimals</tag>
    <style>popupmenu</style>
    <position>100 180 60 20</position>
    <variable>decimals</variable>
    <type>integer</type>
    <text>Decimals</text>
    <textposition>left</textposition>
    <listtext>Auto</listtext>
    <listtext>0</listtext>
    <listtext>1</listtext>
    <listtext>2</listtext>
    <listtext>3</listtext>
    <listtext>4</listtext>
    <listvalue>-1</listvalue>
    <listvalue>0</listvalue>
    <listvalue>1</listvalue>
    <listvalue>2</listvalue>
    <listvalue>3</listvalue>
    <listvalue>4</listvalue>
  </element>
  <element>
    <tag>edittickincrement</tag>
    <style>popupmenu</style>
    <position>100 150 60 20</position>
    <variable>tickincrement</variable>
    <type>integer</type>
    <text>Tick Increment</text>
    <textposition>left</textposition>
    <listtext>1</listtext>
    <listtext>2</listtext>
    <listtext>3</listtext>
    <listtext>4</listtext>
    <listtext>5</listtext>
    <listtext>6</listtext>
    <listtext>7</listtext>
    <listtext>8</listtext>
    <listtext>9</listtext>
    <listtext>10</listtext>
  </element>
  <element>
    <tag>editunit</tag>
    <style>edit</style>
    <position>100 120 60 20</position>
    <variable>unit</variable>
    <type>string</type>
    <text>Unit</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>editlabel</tag>
    <style>edit</style>
    <position>100 90 60 20</position>
    <variable>label</variable>
    <type>string</type>
    <text>Label</text>
    <textposition>left</textposition>
  </element>
  <element>
    <tag>selectlabelposition</tag>
    <style>popupmenu</style>
    <position>100 60 60 20</position>
    <variable>labelposition</variable>
    <type>string</type>
    <text>Label position</text>
    <textposition>left</textposition>
    <listtext>Top</listtext>
    <listtext>Bottom</listtext>
    <listtext>Left</listtext>
    <listtext>Right</listtext>
    <listvalue>top</listvalue>
    <listvalue>bottom</listvalue>
    <listvalue>left</listvalue>
    <listvalue>right</listvalue>
  </element>
  <element>
    <tag>cancel</tag>
    <style>pushcancel</style>
    <position>20 20 60 20</position>
  </element>
  <element>
    <tag>ok</tag>
    <style>pushok</style>
    <position>90 20 70 20</position>
  </element>
</root>
