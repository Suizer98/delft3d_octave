<?xml version="1.0"?>
<root>
  <plotoption>
    <name>curvyarrowsanimationgroup</name>
    <element>
      <style>panel</style>
      <text>Animation Settings for Curvy Arrows</text>
      <position>0 0 350 50</position>
    </element>
    <element>
      <keyword>CurVecRelativeSpeed</keyword>
      <keyword2>RelSpeedCurVec</keyword2>
      <style>edit</style>
      <variable>curvecrelativespeed</variable>
      <default>1</default>
      <type>real</type>
      <text>Relative Speed (-)</text>
      <tooltipstring>Edit relative speed of curvy arrows (setting this parameter higher than 1 will make curvy arrows move faster than the velocity in the dataset)</tooltipstring>
      <position>100 10 50 20</position>
    </element>
    <element>
      <keyword>CurVecLifeSpan</keyword>
      <keyword2>LifeSpanCurVec</keyword2>
      <style>edit</style>
      <variable>curveclifespan</variable>
      <default>50</default>
      <type>int</type>
      <text>Life Span (nr of frames)</text>
      <tooltipstring>Edit life span of curvy arrows (number of frames in animation)</tooltipstring>
      <position>290 10 50 20</position>
    </element>
  </plotoption>
</root>
