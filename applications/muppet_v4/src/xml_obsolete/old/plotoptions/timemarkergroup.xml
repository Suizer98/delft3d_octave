<?xml version="1.0"?>
<root>
  <plotoption>
    <name>timemarkergroup</name>
    <element>
      <style>panel</style>
      <text>Time Marker</text>
      <position>0 0 350 170</position>
    </element>
    <element>
      <keyword>TimeMarker</keyword>
      <default>0</default>
      <text>Time Marker</text>
      <check>
        <operator>ne</operator>
      </check>
      <type>boolean</type>
      <variable>timemarker.enable</variable>
      <style>checkbox</style>
      <position>10 130 60 20</position>
    </element>
    <element>
      <keyword>TimeMarkerTime</keyword>
      <variable>timemarker.time</variable>
      <text>Time</text>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <style>edit</style>
      <position>150 130 120 20</position>
      <type>datetime</type>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>
    <element>
      <name>timemarkertrackoption</name>
      <keyword>TimeMarkerTrackOption</keyword>
      <variable>timemarker.trackoption</variable>
      <type>string</type>
      <default>uptomarker</default>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <style>popupmenu</style>
      <position>70 100 130 20</position>
      <text>Draw track</text>
      <listtext>Up to marker</listtext>
      <listtext>From marker onward</listtext>
      <listtext>None</listtext>
      <listtext>Complete</listtext>
      <listvalue>uptomarker</listvalue>
      <listvalue>frommarker</listvalue>
      <listvalue>none</listvalue>
      <listvalue>complete</listvalue>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>

    <element>
      <text>Show first</text>
      <type>boolean</type>
      <variable>timemarker.showfirstposition</variable>
      <style>checkbox</style>
      <position>10 70 60 20</position>
    </element>

    <element>
      <text>Show last</text>
      <type>boolean</type>
      <variable>timemarker.showlastposition</variable>
      <style>checkbox</style>
      <position>130 70 60 20</position>
    </element>


    <element>
      <name>timemarkermarker</name>
      <keyword>TimeMarkerType</keyword>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <default>o</default>
      <style>selectmarker</style>
      <type>string</type>
      <variable>timemarker.marker</variable>
      <text>Type</text>
      <position>70 40 100 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>
    <element>
      <name>timemarkermarkersize</name>
      <keyword>TimeMarkerSize</keyword>
      <default>10</default>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <style>selectmarkersize</style>
      <variable>timemarker.size</variable>
      <type>int</type>
      <text>Size</text>
      <position>240 40 100 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>
    <element>
      <name>timemarkermarkeredgecolor</name>
      <keyword>TimeMarkerEdgeColor</keyword>
      <default>Red</default>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <style>selectcolor</style>
      <variable>timemarker.edgecolor</variable>
      <includenone>yes</includenone>
      <type>string</type>
      <text>Edge Color</text>
      <position>70 10 100 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>
    <element>
      <name>timemarkermarkerfacecolor</name>
      <keyword>TimeMarkerFaceColor</keyword>
      <default>Red</default>
      <check>
        <variable>timemarker.enable</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <style>selectcolor</style>
      <variable>timemarker.facecolor</variable>
      <includenone>yes</includenone>
      <type>string</type>
      <text>Face Color</text>
      <position>240 10 100 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>timemarker.enable</variable>
          <operator>eq</operator>
          <value>1</value>
        </check>
      </dependency>
    </element>
  </plotoption>
</root>
