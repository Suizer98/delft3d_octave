<?xml version="1.0"?>
<root>
  <plotoption>
    <name>contourlabelgroup</name>
    <element>
      <style>panel</style>
      <position>0 0 350 40</position>
    </element>
    <element>
      <keyword>ContourLabels</keyword>
      <type>boolean</type>
      <default>0</default>
      <check>
        <operator>ne</operator>
      </check>
      <style>checkbox</style>
      <variable>contourlabels</variable>
      <text>Contour Labels</text>
      <position>10 10 50 20</position>
    </element>
    <element>
      <variable>labels.font</variable>
      <style>selectfont</style>
      <text>Font</text>
      <position>120 10 50 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>contourlabels</variable>
          <value>1</value>
          <operator>eq</operator>
        </check>
      </dependency>
    </element>
    <element>
      <keyword>LabelSpacing</keyword>
      <default>72</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
      <variable>labels.spacing</variable>
      <style>edit</style>
      <type>real</type>
      <text>Spacing</text>
      <position>230 10 50 20</position>
      <dependency>
        <action>enable</action>
        <checkfor>all</checkfor>
        <check>
          <variable>contourlabels</variable>
          <value>1</value>
          <operator>eq</operator>
        </check>
      </dependency>
    </element>
    <element>
      <variable>labels.font.name</variable>
      <keyword>LabelFontName</keyword>
      <default>Helvetica</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
    </element>
    <element>
      <name>labelfontsize</name>
      <variable>labels.font.size</variable>
      <type>real</type>
      <keyword>LabelFontSize</keyword>
      <default>5</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
    </element>
    <element>
      <variable>labels.font.weight</variable>
      <keyword>LabelFontWeight</keyword>
      <default>normal</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
    </element>
    <element>
      <variable>labels.font.angle</variable>
      <keyword>LabelFontAngle</keyword>
      <default>normal</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
    </element>
    <element>
      <variable>labels.font.color</variable>
      <keyword>LabelFontColor</keyword>
      <default>Black</default>
      <check>
        <operator>ne</operator>
      </check>
      <check>
        <variable>contourlabels</variable>
        <operator>eq</operator>
        <value>1</value>
      </check>
    </element>
  </plotoption>  
</root>
