      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>adddatestring</variable>
        <value>1</value>
        <operator>eq</operator>
      </check>
    </dependency>
  </element>
  <element>
    <variable>adddate.prefix</variable>
    <type>string</type>
    <style>edit</style>
    <position>50 10 120 20</position>
    <text>Prefix</text>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>adddatestring</variable>
        <value>1</value>
        <operator>eq</operator>
      </check>
    </dependency>
  </element>
  <element>
    <variable>adddate.suffix</variable>
